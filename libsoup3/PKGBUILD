# Maintainer: Fabian Bornschein <fabiscafe-cat-mailbox-dog-org>
# Contributor: Jan Alexander Steffens (heftig) <heftig@archlinux.org>
# Contributor: Jan de Groot <jgc@archlinux.org>
options=(debug !strip)

pkgname=libsoup3
pkgver=3.0.0
pkgrel=0.1
pkgdesc="HTTP client/server library for GNOME"
url="https://wiki.gnome.org/Projects/libsoup"
arch=(x86_64)
license=(LGPL)
depends=("glib2>=2.70.0" "glib-networking>=2.70.0" sqlite krb5 libnghttp2 libpsl brotli)
makedepends=(gobject-introspection python python-quart vala git gtk-doc meson samba)
checkdepends=(apache php-apache)
optdepends=('samba: Windows Domain SSO')
provides=(libsoup-3.0.so libsoup-gnome-3.0.so)
_commit=63f778a9f0df634b627b7683e737b89cb73f943d  # tags/3.0.0^0
source=("git+https://gitlab.gnome.org/GNOME/libsoup.git#commit=$_commit")
sha256sums=('SKIP')

pkgver() {
  cd libsoup
  git describe --tags | sed 's/-/+/g'
}

build() {
  arch-meson libsoup build \
    -D gtk_doc=true \
    -D sysprof=disabled \
    -D autobahn=disabled
  meson compile -C build
}

check() {
  meson test -C build --print-errorlogs
}

package() {
  meson install -C build --destdir=${pkgdir}
}
